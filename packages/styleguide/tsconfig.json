{
  "extends": "../../tsconfig.json",
  "include": [
    "global.d.ts",
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": ["node_modules", "build", "scripts", ".storybook"],
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "rootDirs": ["src"],
    "rootDir": "src",
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true
  }
}
